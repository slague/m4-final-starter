<div>
  <h1 align="center">Login</h1>
  <hr>
  <div>

  <div align='left'>
    <%= form_tag '/login' do %>

      <%= label_tag :email %>
      <%= text_field_tag :email %><br><br>

      <%= label_tag :password %>
      <%= password_field_tag :password %><br><br>

      <%= label_tag :password_confirmation %>
      <%= password_field_tag :password_confirmation %><br><br>

      <%= submit_tag "Login" %>
      <% end %>
  </div>


  <h3>No account? Sign up here:</h3>
<%= link_to 'Sign up for a new account', new_user_path %>
</div>
